<?xml version="1.0" encoding="utf-8"?>
<form>

	<fields name="filter">

		<field
			name="search"
			type="text"
			label="COM_BASE_FILTER_SEARCH_LABEL"
			description="COM_BASE_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>

		<field
			name="published"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

	</fields>

	<fields name="list">

		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			default="a.id ASC"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.published ASC">JSTATUS_ASC</option>
			<option value="a.published DESC">JSTATUS_DESC</option>
			<option value="a.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="a.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="a.description ASC">COM_BASE_BASEITEMLIST_ORDER_DESCRIPTION_ASC</option>
			<option value="a.description DESC">COM_BASE_BASEITEMLIST_ORDER_DESCRIPTION_DESC</option>
			<option value="a.field_1 ASC">COM_BASE_BASEITEMLIST_ORDER_FIELD_1_ASC</option>
			<option value="a.field_1 DESC">COM_BASE_BASEITEMLIST_ORDER_FIELD_1_DESC</option>
			<option value="a.field_2 ASC">COM_BASE_BASEITEMLIST_ORDER_FIELD_2_ASC</option>
			<option value="a.field_2 DESC">COM_BASE_BASEITEMLIST_ORDER_FIELD_2_DESC</option>
			<option value="a.field_3 ASC">COM_BASE_BASEITEMLIST_ORDER_FIELD_3_ASC</option>
			<option value="a.field_3 DESC">COM_BASE_BASEITEMLIST_ORDER_FIELD_3_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>