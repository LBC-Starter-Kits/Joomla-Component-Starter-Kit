<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="details" label="COM_BASECOMPONENT_BASEITEM_TAB_DETAILS">

		<field
			name="id"
			type="number"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			class="readonly"
			readonly="true"
		/>

		<field
			name="title"
			type="text"
			label="COM_BASECOMPONENT_BASEITEM_LABEL_TITLE"
			size="40"
			required="true"
        />

		<field
			name="description"
			type="textarea"
			label="COM_BASECOMPONENT_BASEITEM_LABEL_DESCRIPTION"
			rows="5"
			cols="40"
		/>


		<field
			name="published"
			type="list"
			label="JSTATUS"
			default="1"
			id="published"
			class="custom-select-color-state"
			size="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>
	
	<fieldset name="options" label="COM_BASECOMPONENT_BASEITEM_TAB_OPTIONS">
        <field
			name="field_1"
			type="number"
			label="COM_BASECOMPONENT_BASEITEM_LABEL_FIELD1"
			default="0"
        />

		<field name="field_2"
			type="list"
			label="COM_BASECOMPONENT_BASEITEM_LABEL_FIELD2"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

	</fieldset>

	<fieldset name="picture" label="COM_BASECOMPONENT_BASEITEM_TAB_PICTURE">

		<field
			name="field_3"
			type="media"
			label="COM_BASECOMPONENT_BASEITEM_LABEL_FIELD3"
		/>

	</fieldset>

</form>